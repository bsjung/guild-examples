#-*-conf-*-

[project]

name                    = MNIST
runroot                 = runs

[model "intro"]

runtime                 = tensorflow
train                   = intro
prepare                 = intro --prepare
train_requires          = ./data
evaluate                = intro --evaluate

[model "expert"]

runtime                 = tensorflow
train                   = expert
prepare                 = expert --prepare
train_requires          = ./data
evaluate                = expert --evaluate

[model "samples"]

runtime                 = tensorflow
prepare                 = prepare_samples --sample-dir samples --sample-count 100

[flags]

datadir                 = ./data
rundir                  = $RUNDIR
batch-size              = 100
epochs                  = 2

[view]

fields                  = tf-validation-accuracy tf-train-accuracy \
                          tf-steps tf-time

series-b                = tf-loss tf-accuracy \
			  op-cpu-percent op-memory \
			  gpu-percent gpu-memory

compare-fields          = tf-validation-accuracy tf-train-accuracy \
                          flag-batch-size tf-steps tf-time
